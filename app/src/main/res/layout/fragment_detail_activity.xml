<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TableLayout android:id="@+id/tableLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 2 columns -->
    <TableRow android:id="@+id/tableRow0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        >
        <TextView
            android:text="JD RED Label"
            android:textColor="@color/colorAccent"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_height="180px"
            android:src="@drawable/jwred"
            android:layout_width="wrap_content"/>

    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView3"
            android:text="Country of Origin"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView4"
            android:text="Scotland"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView5"
            android:text="Import From"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView6"
            android:text="ScotLand"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView17"
            android:text="Alcohol %(A.R.V)"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView8"
            android:text="Normally43 %, but 40 % for limited edition Pack"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView7"
            android:text="No of S.K.U available in Nepal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView9"
            android:text="3ltr ,  1.75ltr,   1ltr,  750ml ,  375 ml, 200ml &amp; 50ml (7 SKU)
"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView10"
            android:text="Rate per bottle(MRP)"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView20"
            android:text="Rs 4785"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView1"
            android:text="Unique features"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/textView2"
            android:text="Best Selling Scotch Whiskey in the world
    "
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>

</TableLayout>
</ScrollView>